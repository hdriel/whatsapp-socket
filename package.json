{
    "name": "@hdriel/whatsapp-socket",
    "version": "1.0.0",
    "description": "",
    "author": "Hadriel Benjo (https://github.com/hdriel)",
    "type": "module",
    "types": "dist/index.d.ts",
    "main": "./dist/index.js",
    "scripts": {
        "build": "tsup",
        "build:watch": "tsc --watch",
        "format": "prettier --write .",
        "clean": "rimraf ./dist",
        "yalc:publish": "pnpm run build && yalc publish --private --push",
        "yalc:attach": "cd demo && pnpm add @hdriel/whatsapp-socket"
