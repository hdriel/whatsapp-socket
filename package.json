    "keywords": [
        "whatsapp",
        "js-whatsapp",
        "whatsapp-api",
        "whatsapp-web",
        "whatsapp-chat",
        "whatsapp-group",
        "automation",
        "multi-device"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hdriel/whatsapp-socket.git"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/hdriel/whatsapp-socket/issues"
    },
    "homepage": "https://github.com/hdriel/whatsapp-socket#readme",
