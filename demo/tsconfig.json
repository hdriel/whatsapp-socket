{
    "files": ["@types/express/index.d.ts", "src/server.ts"],
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "preserveSymlinks": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "types": ["node", "jest"],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "lib": ["es2016", "es2020"]
    }
}
